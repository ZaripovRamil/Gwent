<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="GwentClient.Views.RowView">
	<Button IsEnabled="{Binding IsAvailableToPlayer}" Background="Transparent" VerticalContentAlignment="Stretch" HorizontalAlignment="Stretch" Grid.Row="3">
		<Panel>

			<Border Classes="row"/>
			<Image Margin="30" Source="{Binding RowImagePath}"/>

			<ItemsControl Items="{Binding RowCards}">
				<ItemsControl.ItemsPanel>
					<ItemsPanelTemplate>
						<WrapPanel/>
					</ItemsPanelTemplate>
				</ItemsControl.ItemsPanel>
			</ItemsControl>
		</Panel>
	</Button>
</UserControl>
